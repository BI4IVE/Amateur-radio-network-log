# 数据库配置
# PostgreSQL 数据库连接URL
# 格式: postgresql://[用户名]:[密码]@[主机]:[端口]/[数据库名]
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/radio_log

# 应用配置
# 应用端口（默认5000）
PORT=5000

# 运行环境
# development - 开发环境
# production - 生产环境
NODE_ENV=development

# 会话配置
# 会话密钥（生产环境请使用随机字符串）
SESSION_SECRET=your-secret-key-here

# 超时时间（分钟）
SESSION_TIMEOUT=60

# 日志配置
# 日志级别: error, warn, info, debug
LOG_LEVEL=info

# 文件上传配置
# 最大文件大小（字节）
MAX_FILE_SIZE=10485760

# 允许的文件类型
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# CORS配置
# 允许的跨域来源（多个来源用逗号分隔）
ALLOWED_ORIGINS=http://localhost:5000

# 安全配置
# 是否启用HTTPS（生产环境建议启用）
FORCE_HTTPS=false

# JWT配置（如果使用JWT认证）
# JWT密钥
JWT_SECRET=your-jwt-secret-key

# JWT过期时间（秒）
JWT_EXPIRES_IN=86400

# 电子邮件配置（如果需要发送邮件）
# SMTP服务器
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# 备份配置
# 备份目录
BACKUP_DIR=/backups

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 监控配置
# 是否启用性能监控
ENABLE_MONITORING=false

# 性能监控密钥
MONITORING_API_KEY=

# 第三方服务配置（如需要）

# Redis配置（如果使用Redis缓存）
# REDIS_URL=redis://localhost:6379

# 对象存储配置（如果使用对象存储）
# S3_ENDPOINT=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET=
# S3_REGION=
